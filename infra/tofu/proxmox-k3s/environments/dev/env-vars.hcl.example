# Development Environment Variables Template
# Copy this file to env-vars.hcl and fill in your actual values
# DO NOT commit env-vars.hcl to Git!

locals {
  # Proxmox connection configuration
  proxmox_config = {
    endpoint     = "https://proxmox3.jimmylab.duckdns.org/api2/json"
    username     = "root@pam!tofu"
    password     = "YOUR_PROXMOX_PASSWORD_HERE"  # Replace with actual password
    node         = "n100r"
    tls_insecure = true
    timeout      = 300
  }

  # SSH configuration (common for all dev resources)
  ssh_config = {
    public_key       = "YOUR_SSH_PUBLIC_KEY_HERE"  # Replace with your SSH public key
    username         = "jimmy"
    private_key_path = "~/.ssh/home_server"
  }

  # Network configuration defaults for dev
  network_defaults = {
    gateway        = "192.168.1.1"
    nameserver     = "8.8.8.8"
    nameserver_2   = "1.1.1.1"
    domain         = "local"
    interface_name = "eth0"
  }
}
